// constructor
void generateGameWorld(int map[][]) {

  boolean block;
  
  for (int i = 0; i < map.length; i++) {

    for (int j = 0; j < map[i].length; j++) {
      String path =  "img/levels/tile" +map[i][j] + ".png";

      switch(map[i][j]) {

      case TILE_SOLID:
        block = true;
        tiles.add(new Tile(path, new PVector(j * TILE_SIZE, i * TILE_SIZE ), new PVector(TILE_SIZE, TILE_SIZE), block));
        break;

      case TILE_FLOOR:
        PVector temp =  new PVector(j * TILE_SIZE, i * TILE_SIZE );
        location.add(new Location(temp));
        
        block = false;

        tiles.add(new Tile(path, temp, new PVector(TILE_SIZE, TILE_SIZE), block));
        
        break;
      case TILE_DOOR:  
        block = true;
        tiles.add(new Door(path, new PVector(j * TILE_SIZE, i * TILE_SIZE ), new PVector(TILE_SIZE, TILE_SIZE), block));
        break;
      default:
        ;
      }
      block = false;
      tiles.add(new Tile(path, new PVector(j * TILE_SIZE, i * TILE_SIZE ), new PVector(TILE_SIZE, TILE_SIZE), block));
    }
  }
}

void drawMe(Character c) {
  // polymorphism
  for (int i = 0; i < tiles.size(); i++) {
    Tile t = tiles.get(i);
    t.drawMe(c); // passes to Block => get access to player
  }
}
